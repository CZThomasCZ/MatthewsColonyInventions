	<ResearchProjectDef> <!--Basic Electronics-->
		<defName>LeadAcidBattery</defName>
		<label>Lead Acid Battery</label>
		<description>Standard Lead-Acid batteries.</description>
		<baseCost>2000</baseCost>
		<techLevel>Industrial</techLevel>
		<prerequisites>
            <li>BasicEnergyStorage</li>
		</prerequisites>
        <tab>MCI</tab>
