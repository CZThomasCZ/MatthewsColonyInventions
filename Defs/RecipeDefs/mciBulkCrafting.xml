<Defs>
    <RecipeDef>
        <defName>PsychiteTea10</defName>
        <label>Brew 10 cups of psychite tea</label>
        <description>Brews 10 cups of psychite tea.</description>
        <jobString>Brewing psychite tea.</jobString>
        <allowMixingIngredients>true</allowMixingIngredients>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>PsychoidLeaves</li>
                    </thingDefs>
                </filter>
                <count>40</count>
            </li>
        </ingredients>
        <products>
            <PsychiteTea>10</PsychiteTea>
        </products>
        <fixedIngredientFilter>
            <thingDefs>
                <li>PsychoidLeaves</li>
            </thingDefs>
            <specialFiltersToDisallow>
                <li>AllowRotten</li>
            </specialFiltersToDisallow>
        </fixedIngredientFilter>
        <workAmount>3200</workAmount>
        <workSpeedStat>CookSpeed</workSpeedStat>
        <workSkill>Cooking</workSkill>
        <effectWorking>Cook</effectWorking>
        <soundWorking>Recipe_CookMeal</soundWorking>
        <recipeUsers>
            <li>ElectricStove</li>
            <li>FueledStove</li>
        </recipeUsers>
		<skillRequirements>
			<Cooking>7</Cooking>
		</skillRequirements>
    </RecipeDef>
    
